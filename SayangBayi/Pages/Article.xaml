<Page x:Class="SayangBayi.Pages.Article"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SayangBayi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Article">
    <Viewbox>
        <Grid Background="White">
            <Label Content="Articles" FontWeight="Bold" Margin="28,10,250,157" FontSize="16"/>
            <DataGrid ItemsSource="{Binding Articles}" AutoGenerateColumns="False" Margin="0,46,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                    <DataGridTextColumn Header="Content" Binding="{Binding Content}" />
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Viewbox>
    
</Page>
